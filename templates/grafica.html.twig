{% extends 'base.html.twig' %}

{% block titulo %}
	Gráfica
	{{ parent() }}
{% endblock %}
{% block stylesheets %}{% endblock %}
{% block main %}
	<div class="container-fluid px-4">
		<h1 class="mt-4">Gráfico de Tutoriales</h1>
		<div class="form-group">
			<canvas id="grafica"></canvas>
			<script type="text/javascript" src="script.js"></script>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
    <script>
      var ctx = document.getElementById("myChart");
      var myChart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: ["Lunes", "Martes", "Miercoles", "Jueves", "Viernes", "Sabado", "Domingo"],
          datasets: [{
            data: [15339, 21345, 18483, 24003, 23489, 24092, 12034],
            lineTension: 0,
            backgroundColor: 'transparent',
            borderColor: '#007bff',
            borderWidth: 4,
            pointBackgroundColor: '#007bff'
          }]
        },
        options: {
          scales: {
            yAxes: [{
              ticks: {
                beginAtZero: false
              }
            }]
          },
          legend: {
            display: false,
          }
        }
      });
	<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
    <script>
    (async () => {
    const respuestaRaw = await fetch("/grafica/datos");
    const respuesta = await respuestaRaw.json();
    var $grafica = document.getElementById("grafica");

    const etiquetas = respuesta.etiquetas.lenguaje; 
    const datosTutoriales = {
        label: "Tutoriales",
        data: respuesta.datos.data,
        backgroundColor: 'rgba(54, 162, 235, 0.2)', 
        borderColor: 'rgba(54, 162, 235, 1)', 
        borderWidth: 1, 
    };
    new Chart($grafica, {
        type: 'line',
        data: {
          labels: respuesta.etiquetas.lenguaje,
          datasets: [{
            data: respuesta.datos.data,
            lineTension: 0,
            backgroundColor: 'transparent',
            borderColor: '#007bff',
            borderWidth: 4,
            pointBackgroundColor: '#007bff'
          }]
        },
        options: {
          scales: {
            yAxes: [{
              ticks: {
                beginAtZero: false
              }
            }]
          },
          legend: {
            display: false,
          }
        }
    });
})();
    </script>
{% endblock %}
